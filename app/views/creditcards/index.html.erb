<p id="notice"><%= notice %></p>

<h1>Creditcards</h1>

<table>
  <thead>
    <tr>
      <th>Network</th>
      <th>Cardnumber</th>
      <th>Name</th>
      <th>Address</th>
      <th>Country</th>
      <th>Cvv</th>
      <th>Exp</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @creditcards.each do |creditcard| %>
      <tr>
        <td><%= creditcard.network %></td>
        <td><%= creditcard.cardnumber %></td>
        <td><%= creditcard.name %></td>
        <td><%= creditcard.address %></td>
        <td><%= creditcard.country %></td>
        <td><%= creditcard.cvv %></td>
        <td><%= creditcard.exp %></td>
        <td><%= creditcard.user_id %></td>
        <td><%= link_to 'Show', creditcard %></td>
        <td><%= link_to 'Edit', edit_creditcard_path(creditcard) %></td>
        <td><%= link_to 'Destroy', creditcard, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Creditcard', new_creditcard_path %>
